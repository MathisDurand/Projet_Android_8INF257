<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/BackgroundLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TitleTheme"
            style="@style/TitleTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="ThÃ¨mes"></TextView>
        <RadioGroup
            android:id="@+id/RadioGroupTheme"
            android:background="@drawable/rounded_borders"
            style="@style/RadioGroupTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">
            <RadioButton
                android:id="@+id/RadioButton1"
                style="@style/ButtonRadio1"
                android:background="@drawable/rounded_borders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Par Defaut"></RadioButton>
            <RadioButton
                android:id="@+id/RadioButton2"
                style="@style/ButtonRadio2"
                android:background="@drawable/rounded_borders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Theme Sombre"></RadioButton>
            <RadioButton
                android:id="@+id/RadioButton3"
                style="@style/ButtonRadio3"
                android:background="@drawable/rounded_borders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bleu"></RadioButton>
            <RadioButton
                android:id="@+id/RadioButton4"
                style="@style/ButtonRadio4"
                android:background="@drawable/rounded_borders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Rouge"></RadioButton>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/ButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            style="@style/RadioGroupTheme">

            <Button
                android:id="@+id/ButtonTheme1"
                style="@style/buttonBottom"
                android:textColor="@color/black"
                android:background="@drawable/rounded_border_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alarme"></Button>

            <Button
                android:id="@+id/ButtonTheme2"
                style="@style/buttonBottom"
                android:textColor="#F44336"
                android:background="@drawable/rounded_border_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parametre"></Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>